datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  login     String
  password  String
  version   Int      @default(1)
  createdAt DateTime
  updatedAt DateTime
}

model Track {
  id       String @id @default(uuid())
  name     String
  duration Int

  artist   Artist? @relation("ArtistTracks", fields: [artistId], references: [id])
  artistId String?

  album   Album?  @relation("AlbumTracks", fields: [albumId], references: [id])
  albumId String?
}

model Favourites {
  id    String @id
  favouriteType  FavouriteType
}

enum FavouriteType {
  artists
  albums
  tracks
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean

  tracks Track[] @relation("ArtistTracks")
  albums Album[] @relation("ArtistAlbums")
}

model Album {
  id     String  @id @default(uuid())
  name   String
  year   Int
  tracks Track[] @relation("AlbumTracks")

  artist   Artist? @relation("ArtistAlbums", fields: [artistId], references: [id])
  artistId String?
}
