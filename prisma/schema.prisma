datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  login     String
  password  String
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Track {
  id       String @id @default(uuid())
  name     String
  duration Int

  artist   Artist? @relation("ArtistTracks", fields: [artistId], references: [id])
  artistId String?

  album   Album?  @relation("AlbumTracks", fields: [albumId], references: [id])
  albumId String?

  favourites   Favourites? @relation("FavouriteTracks", fields: [favouritesId], references: [id])
  favouritesId String?
}

model Favourites {
  id String @id @default(uuid())

  artists Artist[] @relation("FavouriteArtists")
  albums  Album[]  @relation("FavouriteAlbums")
  tracks  Track[]  @relation("FavouriteTracks")
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean

  tracks Track[] @relation("ArtistTracks")
  albums Album[] @relation("ArtistAlbums")

  favourites   Favourites? @relation("FavouriteArtists", fields: [favouritesId], references: [id])
  favouritesId String?
}

model Album {
  id     String  @id @default(uuid())
  name   String
  year   Int
  tracks Track[] @relation("AlbumTracks")

  artist   Artist? @relation("ArtistAlbums", fields: [artistId], references: [id])
  artistId String?

  favourites   Favourites? @relation("FavouriteAlbums", fields: [favouritesId], references: [id])
  favouritesId String?
}
